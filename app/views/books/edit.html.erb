<div class="row">

  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>Editing Book</h1>

    <!--バリデーションによるエラーメッセージ-->
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, id:"book_title", value: @book.title, class: "form-control book_title" %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, id:"book_opinion", value: @book.body, class: "form-control book_body" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class: "btn btn-success", method: :patch %>
      </div>
    <% end %>

  </div>
</div>