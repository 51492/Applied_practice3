<div>
  <h1>User info</h1>
  
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name<%= current_user.name %></p>
  <p>introduction<%= current_user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
  
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

</div>
  <!--上はいずれ共通化する-->

<h1>Users</h1>
  <% @users.each do |user| %>
    <div>
      <!--＜%= image_tag book.get_image %>-->
      <p><%= image_tag user.get_profile_image(100,100) %> </p>
      <p><%= user.name %></p>
      <p><%= link_to "Show", user_path(user.id) %></p>
    </div>
  <% end %>