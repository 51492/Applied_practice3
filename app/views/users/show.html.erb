<div>
  <h1>User info</h1>
  
  <%= image_tag current_user.get_profile_image(100,100) %>
  <p>name<%= current_user.name %></p>
  <p>introduction<%= current_user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>
  
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

</div>
    <!--上はいずれ共通化する-->

<!-- ユーザーの投稿一覧 -->
<h1>Book detail</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= link_to book.title, book_path(book.id) %>
  <p><%= book.body %></p>
</div>
<% end %>