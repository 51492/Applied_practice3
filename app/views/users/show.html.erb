<%= render 'books/list', book: @book_new, user: @user %> <!--共通レイアウト(違うフォルダの為パス記入欄に「books/」を追加してる-->

<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(book.user.id) do %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <% end %>

  <%= link_to book.title, book_path(book.id) %>
  <p><%= book.body %></p>
</div>
<% end %>